{
	"name": "portfolio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm build && pnpm wrangler pages deploy",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "oxlint && eslint .",
		"lint:fix": "oxlint --fix && eslint --fix .",
		"prepare": "husky",
		"preview": "pnpm build && pnpm wrangler pages dev",
		"wrangler": "op plugin run -- wrangler"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --cache --fix"
		],
		"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint --fix",
		"package.json": "sort-package-json"
	},
	"dependencies": {
		"@fontsource/economica": "^5.0.20",
		"@octokit/core": "^6.1.2",
		"@unpic/svelte": "^0.0.53",
		"posthog-js": "^1.153.0",
		"svelte-headlessui": "^0.0.42",
		"svelte-transition": "^0.0.17",
		"tailwind-merge": "^2.4.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240725.0",
		"@dword-design/eslint-plugin-import-alias": "^5.0.0",
		"@iconify/svelte": "^4.0.2",
		"@sveltejs/adapter-cloudflare": "^4.7.0",
		"@sveltejs/enhanced-img": "^0.3.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-oxlint": "^0.5.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.8.0",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.7",
		"oxlint": "^0.6.1",
		"postcss": "^8.4.40",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"sort-package-json": "^2.10.0",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.5",
		"tailwindcss": "^3.4.7",
		"tslib": "^2.4.1",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.3.5",
		"vite-plugin-webfont-dl": "^3.9.4",
		"wrangler": "^3.67.1"
	},
	"packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
