{
	"name": "portfolio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm build && pnpm wrangler pages deploy",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "oxlint && eslint .",
		"lint:fix": "oxlint --fix && eslint --fix .",
		"prepare": "husky",
		"preview": "pnpm build && pnpm wrangler pages dev",
		"wrangler": "op plugin run -- wrangler"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --cache --fix"
		],
		"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint --fix",
		"package.json": "sort-package-json"
	},
	"dependencies": {
		"posthog-js": "^1.144.2"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240620.0",
		"@dword-design/eslint-plugin-import-alias": "^5.0.0",
		"@iconify/svelte": "^4.0.2",
		"@sveltejs/adapter-cloudflare": "^4.6.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-oxlint": "^0.5.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"oxlint": "^0.5.1",
		"postcss": "^8.4.39",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"sort-package-json": "^2.10.0",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vite-plugin-webfont-dl": "^3.9.4",
		"wrangler": "^3.62.0"
	},
	"packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a"
}
